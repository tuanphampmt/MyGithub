<% include template/nav.ejs %>
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-3">Xem dữ liệu</h1>
        <p class="lead">MONGODB</p>
        <hr class="my-2">
    </div>
    <table class="table table-striped table-inverse">
        <thead class="thead-inverse">
        <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
        </thead>
        <% data.forEach(function (motphantu) {
        %>
            <tbody>
            <tr>
                <td scope="row"><%= motphantu.Name %></td>
                <td><%= motphantu.Phone %></td>
                <td>
                    <a href="/sua/<%= motphantu._id %>">
                        <button type="button" class="btn btn-primary">Edit</button>
                    </a>
                    <a onclick="return xoa('Bạn có chắc chắn xoá không?')" href="/xoa/<%= motphantu._id %>">
                        <button type="button" class="btn btn-primary">Remove</button>
                    </a>
                </td>
            </tr>
            </tbody>
        <%
        }) %>
    </table>
</div>


